<div class='container'>
	<h1>Sign In </h1>
	<% if flash[:error] %>
	  <p><%= flash[:error] %></p>
	<% end %>

	<%= simple_form_for(:session, :url => sessions_path) do |f| %>
	  <%= f.input :email %>
	  <%= f.input :password %>
	  <%= f.button :submit, 'Sign In', :class => 'btn btn-primary' %>
	<% end %>
	<%= link_to "Or Register", signup_path, class:'btn btn-success' %>
</div><!--end of div container-->