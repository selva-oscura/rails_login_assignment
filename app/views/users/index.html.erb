<html>
	<head>
<% content_for :title do %>
  Users Index
<% end %>
	</head>
	<body>
		<div class='container'>
			<!-- <button type='button' class='btn btn-primary inline'></button> -->
			<%= link_to "Profile", current_user,  class: 'btn btn-primary inline'%>			
			<!-- <button type='button' class='btn btn-danger inline'></button> -->
			<%= link_to "Sign out", signout_path, class:'btn btn-danger inline', method: "delete" %>
			<div class='clear'></div>
			<h1>Index of Users</h1>
			<table class='table table-striped table-hover' border='1'>
				<thead>
					<tr>
						<th>Name</th>
						<th>E-mail</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td> <a href='/users/<%= user.id%>'> <%= user.name %> </a></td>
							<td> <%= user.email %> </td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div><!--end of div container-->
	</body>
</html>