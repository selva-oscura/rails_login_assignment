<div class='container'>
	<h1>New User</h1>

	<%= simple_form_for(@user) do |f| %>
	  <%= f.input :name %>
	  <%= f.input :email %>
	  <%= f.input :password %>
	  <%= f.input :password_confirmation %>
	  <%= f.button :submit, 'Register', class:'btn btn-success' %>
	<% end %>
</div><!--end of div container-->